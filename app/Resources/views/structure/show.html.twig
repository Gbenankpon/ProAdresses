{% extends 'base.html.twig' %}

{% block body %}
    <h1>Structure</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ structure.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if structure.date %}{{ structure.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ structure.type }}</td>
            </tr>
            <tr>
                <th>Enseigne</th>
                <td>{{ structure.enseigne }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ structure.adresse }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ structure.ville }}</td>
            </tr>
            <tr>
                <th>Departement</th>
                <td>{{ structure.departement }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ structure.region }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ structure.tel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ structure.email }}</td>
            </tr>
            <tr>
                <th>Online</th>
                <td>{% if structure.online %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_structure_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_structure_edit', { 'id': structure.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
